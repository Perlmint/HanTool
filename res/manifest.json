{
    "manifest_version": 2,

    "name": "__MSG_plugin_name__",
    "description": "__MSG_description__",
    "version": "1.0",

    "background": {
        "scripts": [
            "chrome_background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "chrome_content.js",
            "hantool.js"
        ]
    }],
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "web_accessible_resources": [
        "db.json"
    ],
    "offline_enabled": true,
    "default_locale": "en"
}
